@model LibraryProject.Models.BorrowAndReturn

@{
    ViewBag.Title = "Details";
}

 <!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/BorrowAndReturns/Index">Borrow Manage</a></li>
        <li class="active">Details</li>
    </ol>
</section>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BookID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BorrowTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BorrowTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReturnTime)
        </dt>

        @if(Model.ReturnTime == new DateTime(0001, 1, 1))
        {
            <dd></dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.ReturnTime)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.ExpiredDays)
        </dt>

        @if(Model.ReturnTime == new DateTime(0001, 1, 1))
        {
            <dd></dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.ExpiredDays)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.IsReturn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsReturn)
        </dd>

    </dl>
</div>
