<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>NWPU Library System</title>
    @Styles.Render("~/Content/font-awesome.min.css")
    <!-- Bootstrap core CSS -->
    @Styles.Render("~/vendor/bootstrap/css/bootstrap.min.css")
    <!--link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" -->
    <!-- Custom styles for this template -->
    @Styles.Render("~/Content/css/simple-sidebar.css")
    <!--link href="css/simple-sidebar.css" rel="stylesheet"-->
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <i class=""></i>
                    @Html.ActionLink("Home","Index","Home")
                </li>
                <li>
                    @Html.ActionLink("Borrow Books","Index","Books")
                </li>
                <li>
                    @Html.ActionLink("Profile","Index","UserInfoes")
                </li>
                <li>
                    @Html.ActionLink("Logout","Index","Home")
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">Menu</a>
            <div class="form-group"></div>
            @RenderBody()
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    @Scripts.Render("~/vendor/jquery/jquery.min.js")
    @Scripts.Render("~/vendor/popper/popper.min.js")
    @Scripts.Render("~/vendor/bootstrap/js/bootstrap.min.js")
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

    
</body>
</html>
