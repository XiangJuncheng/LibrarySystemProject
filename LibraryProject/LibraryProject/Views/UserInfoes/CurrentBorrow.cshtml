@model IEnumerable<LibraryProject.ViewModels.BorrowHistoryOutput>

@{
    ViewBag.Title = "BorrowHistory";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/UserInfoes/PersonInfo">Profile</a></li>
        <li class="active">Current Borrow</li>
    </ol>
</section>

<table id="table_id_example" class="table table-striped table-hover dt-responsive nowrap table-bordered dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowTime)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.ExpiredDays)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BorrowTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.ExpiredDays)
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#table_id_example').DataTable();
    });
</script>