@model IEnumerable<LibraryProject.Models.User>

@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">User Manage</li>
    </ol>
</section>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="table_id_example" class="table table-striped table-hover dt-responsive nowrap table-bordered dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Role)
                </td>
                <td>
                    @Html.ActionLink("AddRole","AddRole", new { id = item.ID}) |
                    @Html.ActionLink("DeleteRole", "DeleteRole", new { id=item.ID})
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#table_id_example').DataTable();
    });
</script>